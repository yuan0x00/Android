<resources>

    <!-- 形状体系 -->
    <style name="ShapeAppearance.App.Card" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/app_corner_radius_lg</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.FAB" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerSize">@dimen/app_corner_radius_lg</item>
