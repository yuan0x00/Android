<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".init.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.App">
        <!-- 覆盖 BlockCanary 的 DisplayActivity -->
        <activity
            android:name="com.github.moduth.blockcanary.ui.DisplayActivity"
            android:exported="false"
            tools:ignore="MissingClass"/>
        <activity
            android:name=".feature.setting.SettingActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.developer.DeveloperActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.mine.coin.CoinActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.mine.favorite.FavoriteActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.mine.share.ShareActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.message.MessageCenterActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.search.SearchActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.discover.share.ShareArticleActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.discover.tutorial.list.TutorialArticleListActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.mine.tools.UserToolsActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.discover.system.list.SystemArticleListActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.main.discover.system.SystemCategoryDetailActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.container.FragmentContainerActivity"
            android:exported="false"/>
        <activity
            android:name=".feature.login.LoginActivity"
            android:exported="false"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.splash.SplashActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>
