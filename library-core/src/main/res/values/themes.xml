<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 内容弹窗主题：透明背景，使用系统动画 -->
    <style name="BaseDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.DropDownUp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 遮罩主题：全屏、半透明黑色背景、无内容 -->
    <style name="DimDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/dim_overlay</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>