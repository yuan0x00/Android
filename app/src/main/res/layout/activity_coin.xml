<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:titleTextAppearance="@style/TextAppearance.App.Subtitle"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="@string/coin_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/app_spacing_lg">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSummary"
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_spacing_lg"
            app:cardCornerRadius="@dimen/app_corner_radius_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/app_spacing_xl">

                <TextView
                    android:id="@+id/tvCoinBalance"
                    style="@style/TextAppearance.App.Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:id="@+id/tvCoinBalanceLabel"
                    style="@style/TextAppearance.App.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_spacing_xs"
                    android:text="@string/coin_balance_label"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_spacing_lg"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLevel"
                            style="@style/TextAppearance.App.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coin_level_label"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRank"
                            style="@style/TextAppearance.App.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coin_rank_label"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            style="@style/Widget.App.TabLayout.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_spacing_md"
            android:paddingHorizontal="@dimen/app_spacing_lg"
            app:tabMode="fixed"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/app_spacing_lg"/>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                style="@style/Widget.Material3.CircularProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorSize="@dimen/app_size_indicator"/>

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/coin_empty_records"
                android:textAppearance="@style/TextAppearance.App.BodyStrong"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"/>

        </FrameLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loadMoreProgress"
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/app_spacing_md"
            android:layout_marginBottom="@dimen/app_spacing_md"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorSize="@dimen/app_spacing_2xl"/>

    </LinearLayout>
</LinearLayout>
