<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoreUiBaseDialogTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CoreUiBasePopupAnimation">
        <item name="android:windowEnterAnimation">@anim/core_ui_base_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/core_ui_base_popup_exit</item>
    </style>

    <style name="CoreUiFadeWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/core_ui_fade_in</item>
        <item name="android:windowExitAnimation">@anim/core_ui_fade_out</item>
    </style>

    <style name="CoreUiCircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
