<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="我的"
        app:titleTextAppearance="@style/TextAppearance.App.Title"
        app:titleTextColor="?attr/colorOnSurface"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_spacing_lg">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                style="@style/Widget.App.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_spacing_lg"
                app:cardCornerRadius="@dimen/app_corner_radius_lg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_spacing_xl">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="@dimen/app_size_avatar_md"
                        android:layout_height="@dimen/app_size_avatar_md"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher_round"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CoreUiCircleImageView"/>

                    <TextView
                        android:id="@+id/tvUsername"
                        style="@style/TextAppearance.App.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_spacing_lg"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivAvatar"
                        app:layout_constraintTop_toTopOf="@id/ivAvatar"
                        tools:text="请先登录"/>

                    <TextView
                        android:id="@+id/tvTagline"
                        style="@style/TextAppearance.App.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_spacing_lg"
                        android:layout_marginTop="@dimen/app_spacing_xs"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvUsername"
                        tools:text="登录"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_spacing_lg"
                        android:layout_marginTop="@dimen/app_spacing_md_plus"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvTagline"
                        app:singleLine="true"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMembership"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_membership_newbie"
                            android:textColor="?attr/colorPrimary"
                            android:visibility="gone"
                            app:chipBackgroundColor="?attr/colorPrimaryContainer"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/btnDailyAction"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/app_spacing_xxs"
                            android:text="@string/mine_action_check_in"
                            android:textColor="?attr/colorPrimary"
                            android:visibility="gone"
                            app:chipBackgroundColor="?attr/colorPrimaryContainer"/>
                    </com.google.android.material.chip.ChipGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                style="@style/Widget.App.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_spacing_md"
                app:cardCornerRadius="@dimen/app_corner_radius_lg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardProfile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/app_spacing_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/layoutCoin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCoinCount"
                                style="@style/TextAppearance.App.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"/>

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mine_stat_points"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutFavorite"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFavoriteCount"
                                style="@style/TextAppearance.App.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"/>

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mine_stat_favorites"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutShare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvShareCount"
                                style="@style/TextAppearance.App.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"/>

                            <TextView
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mine_stat_share"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActions"
                style="@style/Widget.App.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_spacing_md"
                app:cardCornerRadius="@dimen/app_corner_radius_lg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSummary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/itemDeveloper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/app_spacing_lg"
                        android:paddingVertical="@dimen/app_spacing_md">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:iconTint="?attr/colorPrimary"
                            app:srcCompat="@drawable/logo_dev_24px"/>

                        <TextView
                            style="@style/TextAppearance.App.BodyStrong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/app_spacing_lg"
                            android:layout_weight="1"
                            android:text="@string/mine_section_developer"
                            android:textColor="?attr/colorOnSurface"/>

                        <ImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:srcCompat="@drawable/arrow_forward_ios_24px"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemTools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/app_spacing_lg"
                        android:paddingVertical="@dimen/app_spacing_md">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:iconTint="?attr/colorPrimary"
                            app:srcCompat="@drawable/service_toolbox_24px"/>

                        <TextView
                            style="@style/TextAppearance.App.BodyStrong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/app_spacing_lg"
                            android:layout_weight="1"
                            android:text="@string/mine_section_tools"
                            android:textColor="?attr/colorOnSurface"/>

                        <ImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:srcCompat="@drawable/arrow_forward_ios_24px"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/app_spacing_lg"
                        android:paddingVertical="@dimen/app_spacing_md">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:iconTint="?attr/colorPrimary"
                            app:srcCompat="@drawable/settings_24px"/>

                        <TextView
                            style="@style/TextAppearance.App.BodyStrong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/app_spacing_lg"
                            android:layout_weight="1"
                            android:text="@string/mine_section_settings"
                            android:textColor="?attr/colorOnSurface"/>

                        <ImageView
                            android:layout_width="@dimen/app_size_icon_md"
                            android:layout_height="@dimen/app_size_icon_md"
                            app:srcCompat="@drawable/arrow_forward_ios_24px"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        style="@style/Widget.Material3.CircularProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        app:indicatorSize="@dimen/app_size_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
