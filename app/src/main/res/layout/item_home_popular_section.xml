<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_size_home_section_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        style="@style/Widget.App.Card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/app_spacing_lg"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/app_spacing_lg"
        app:cardCornerRadius="@dimen/app_corner_radius_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/app_spacing_lg">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Section"
                android:textColor="?attr/colorOnSurface"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_spacing_sm"
                android:isScrollContainer="false"
                app:singleLine="false"
                app:singleSelection="false"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
