<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:paddingStart="@dimen/app_spacing_md"
    android:paddingTop="@dimen/app_spacing_sm"
    android:paddingEnd="@dimen/app_spacing_md"
    android:paddingBottom="@dimen/app_spacing_sm">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.Section"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/articlesGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_spacing_sm"
        android:visibility="gone"
        app:chipSpacing="@dimen/app_spacing_sm"
        app:chipSpacingHorizontal="@dimen/app_spacing_sm"
        app:chipSpacingVertical="@dimen/app_spacing_sm"
        app:singleLine="false"
        app:singleSelection="false"/>

</LinearLayout>
