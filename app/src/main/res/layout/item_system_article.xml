<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/app_corner_radius_lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/app_spacing_lg">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.App.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDesc"
            style="@style/TextAppearance.App.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_spacing_sm"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_spacing_md"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAuthor"
                style="@style/TextAppearance.App.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/tvMeta"
                style="@style/TextAppearance.App.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_spacing_sm"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
