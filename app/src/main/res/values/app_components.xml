    <!-- 核心组件样式 -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/app_color_brand_primary</item>
        <item name="android:textColor">@color/app_color_brand_on_primary</item>
        <item name="iconTint">@color/app_color_brand_on_primary</item>
        <item name="android:paddingStart">@dimen/app_spacing_lg</item>
        <item name="android:paddingEnd">@dimen/app_spacing_lg</item>
        <item name="android:insetTop">@dimen/app_spacing_xs</item>
        <item name="android:insetBottom">@dimen/app_spacing_xs</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/app_color_outline</item>
        <item name="android:textColor">@color/app_color_brand_primary</item>
        <item name="iconTint">@color/app_color_brand_primary</item>
    </style>

    <style name="Widget.App.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/app_color_surface_high</item>
        <item name="android:textColor">@color/app_color_brand_primary</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/app_color_brand_primary</item>
        <item name="iconTint">@color/app_color_brand_primary</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/app_color_brand_primary</item>
        <item name="iconTint">@color/app_color_brand_on_primary</item>
        <item name="elevation">@dimen/app_elevation_fab</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/app_color_surface_high</item>
        <item name="chipStrokeColor">@color/app_color_outline</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textColor">@color/app_color_on_surface</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Label</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Card</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/app_color_surface</item>
        <item name="strokeColor">@color/app_color_outline</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cardElevation">0dp</item>
    </style>

