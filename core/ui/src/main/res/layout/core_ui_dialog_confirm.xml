<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/core_ui_base_popup_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/core_ui_spacing_xl"
    android:paddingTop="@dimen/core_ui_spacing_xl"
    android:paddingEnd="@dimen/core_ui_spacing_xl"
    android:paddingBottom="@dimen/core_ui_spacing_lg">

    <TextView
        android:id="@+id/core_ui_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/core_ui_spacing_sm"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?android:textColorPrimary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/core_ui_confirm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/core_ui_spacing_xl"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?android:textColorSecondary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/core_ui_confirm_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/core_ui_spacing_sm"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/core_ui_confirm_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/core_ui_spacing_md"
            android:minWidth="0dp"
            android:paddingStart="@dimen/core_ui_spacing_lg"
            android:paddingEnd="@dimen/core_ui_spacing_lg"
            android:textAllCaps="false"
            android:visibility="gone" />

        <Button
            android:id="@+id/core_ui_confirm_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="@dimen/core_ui_spacing_lg"
            android:paddingEnd="@dimen/core_ui_spacing_lg"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
