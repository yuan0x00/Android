<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        style="@style/Widget.App.Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_spacing_xl"
        app:cardElevation="@dimen/app_elevation_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="@dimen/app_dialog_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/app_spacing_xl"
            android:text="@string/dialog_tip_placeholder"
            android:textAppearance="@style/TextAppearance.App.BodyStrong"
            android:textColor="?attr/colorOnSurface"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
